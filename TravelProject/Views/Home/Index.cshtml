                <div class="dropdown-content">
                    <ul>
                        <li>
                            <a href="@Url.Action("Index","Home")">Home</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Destination")">Destination</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Tour")">Tours</a>
                        </li>
                        
                        <li>
                            <a href="@Url.Action("Login","Home")">Login</a>
