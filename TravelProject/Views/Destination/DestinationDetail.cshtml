@using TravelProject.Models;
@model DiaDanh
@{ 
    ViewBag.Title = "Destination";
    Layout = "~/Views/Shared/_Layout.cshtml";
    TravelContext mdt = new TravelContext();
    var modelDiaDanh_DanhMucTour = mdt.DiaDanh_DanhMucTour.Where(x => x.MaDiaDanh == Model.MaDiaDanh).ToList();
    var modelDanhmuc = mdt.DanhMucTours.ToList();
    var modelTour = mdt.Tours.Where(x=>x.MaDiaDanh == Model.MaDiaDanh).ToList();
}
<link rel="stylesheet" type="text/css" href="~/Content/css/lightslider.css" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
<script src="https://kit.fontawesome.com/cecfe00ec6.js" crossorigin="anonymous"></script>
<script src="~/Content/js/jquery-3.5.1.min.js"></script>
<script type="text/javascript" src="~/Content/js/JQuery3.3.1.js"></script>
<script type="text/javascript" src="~/Content/js/lightslider.js"></script>
<script src="https://kit.fontawesome.com/a858033a2a.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="~/Content/css/bootstrap.css">
<link type="text/css" rel="stylesheet" href="~/Content/css/destination.css" />
<section class="img-destination">
    <img src="@Url.Content("~/Content/images/Destination2/" + Model.Img2)">
</section>
<section class="content">
    <div class="container">
        <div class="recommend">
            <div id="title">
                <h2>@Model.TenDiaDanh Tours & Package Tours</h2>
            </div>
            <p>
                @Model.MoTa
            </p>
        </div>

        <div class="feature-tours">
            <h2>
                Feature Tours
            </h2>
            <p>
                Get inspired with our sample trips below. You can have any trip tailor made for your private travel.
                Any number of days. Any departure date. Any experience you want.
            </p>
            <div class="list-tours">
                <div class="TourList">
                    @*@foreach( var item in Model.Take(3))*@
                    @{ foreach (Tour t in modelTour.Take(3))
                        {
                            <div class="tour-item">
                                <div class="img-list">
                                    <img src="@Url.Content("~/Content/")@t.LinkImage" />
                                </div>
                                <div class="wrap-list-gui">
                                    <h3>
                                        @t.TenTour
                                    </h3>
                                    <div class="add">
                                        <div class="add-left">
                                            <span>
                                                <i>@t.DiaDiem</i>
                                            </span>
                                            <br>
                                            <span>
                                                <i class="far fa-clock"></i>
                                                <i>@t.NumDay Days @t.NumDay-1 Nights</i>
                                                <span class="price">$@t.Gia</span>
                                            </span>
                                        </div>
                                        <div class="view-detail-btn">
                                            <div class="add-view">
                                                <a href="/Tour/TourPlace/@t.MaChiTietTour">View DeTail</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<section class="package-tours">
    <div class="container">
        <h1>@Model.TenDiaDanh & Package Tours</h1>
        <div class="tab-list">
            <div class="tab-control">
                <ul class="nav-tabs">
                    <li>
                        <div id="tab-1" class="tab-item tab-border">
                            @modelDanhmuc[0].TenDanhMucGoiTour
                        </div>
                    </li>
                    <li>
                        <div id="tab-2" class="tab-item">
                            @modelDanhmuc[1].TenDanhMucGoiTour
                        </div>
                    </li>
                    <li>
                        <div id="tab-3" class="tab-item">
                            @modelDanhmuc[2].TenDanhMucGoiTour
                        </div>
                    </li>
                    <li>
                        <div id="tab-4" class="tab-item">
                            @modelDanhmuc[3].TenDanhMucGoiTour
                        </div>
                    </li>
                    <li>
                        <div id="tab-5" class="tab-item">
                            @modelDanhmuc[4].TenDanhMucGoiTour
                        </div>
                    </li>
                    <li>
                        <div id="tab-6" class="tab-item">
                            @modelDanhmuc[5].TenDanhMucGoiTour
                        </div>
                    </li>
                </ul>
            </div>
            <div class="tab-show">
                <div id="tab-1-content" class="tab-content-item show">
                    @Html.Raw(modelDiaDanh_DanhMucTour[0].Mota)
                </div>
                <div id="tab-2-content" class="tab-content-item">
                    @Html.Raw(modelDiaDanh_DanhMucTour[1].Mota)
                </div>
                <div id="tab-3-content" class="tab-content-item">
                    @Html.Raw(modelDiaDanh_DanhMucTour[2].Mota)
                </div>
                <div id="tab-4-content" class="tab-content-item">
                    @Html.Raw(modelDiaDanh_DanhMucTour[3].Mota)
                </div>
                <div id="tab-5-content" class="tab-content-item">
                    @Html.Raw(modelDiaDanh_DanhMucTour[4].Mota)
                </div>
                <div id="tab-6-content" class="tab-content-item">
                    @Html.Raw(modelDiaDanh_DanhMucTour[5].Mota)
                </div>


            </div>
        </div>
    </div>
</section>

<section class="img-destination">
    <img src="~/Content/images/Destination2/HaLong2.jpg">
</section>
<script type="text/javascript" src="~/Content/js/destination.js"></script>

