            <div class="menu-home">
                <div id="branding">
                    <img src="~/Content/images/logo-svietnam-travel.png" />
                </div>
                <nav>
                    <ul>
                        <li>
                            <a href="@Url.Action("Index","Home")">Home</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","Destination")">Destination</a>
                        </li>
                        <li>
