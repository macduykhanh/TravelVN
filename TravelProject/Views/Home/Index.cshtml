    <!-- section 1 -->
    <section class="tours">
        <div class="container">
            <div class="title">
                <h1>
                    Best VietNam Tours 2020
                </h1>
            </div>
            <div class="TourList">
                @{
                    foreach (var item in modelTours.Take(3))
                    {
                        <div class="tour-item">
                            <div class="img-list">
                                <img src="@Url.Content("~/Content/")@item.LinkImage">
                            </div>
                            <div class="wrap-list-gui">
                                <h3>
                                    @item.TenTour
                                </h3>
                                <div class="add">
                                    <div class="add-left">
                                        <span>
                                            <i>@item.DiaDiem</i>
                                        </span>
                                        <br>
                                        <span>
                                            <i class="far fa-clock"></i>
                                            <i>@item.NumDay Days</i>
                                            <span class="price">@item.Gia $</span>
                                        </span>
                                    </div>
                                    <div class="view-detail-btn">
                                        <div class="add-view bg-primary">
                                            <a href="/Tour/TourPlace/@item.MaTour" class=" text-white" style="text-decoration:none">View Detail</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class=""style="width:100px;border-radius:10px;height:40px;margin-top:40px;margin-left:50%;transform:translateX(-50%);text-align:center">
